<!--
 *  Content heading, adding the title and the h1 
 *  with the same value
-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
        <!--
*  Message Block
-->
<%- messages() %>



<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>





<!--
*  Register form
-->
<div id="formContainer">
    <p>All fields are required</p>
    <form id="RegisterForm" action="/account/register" class="register-form" method="post">
        <fieldset>
            <label for="account_firstname" class="firstname-label">First name</label>
            <input type="text" id="account_firstname" name="account_firstname" class="account_firstname" required value="<%= locals.account_firstname %>">
            
            <label for="account_lastname" class="lastname-label">Last name</label>
            <input type="text" id="account_lastname" name="account_lastname" class="account_lastname" required value="<%= locals.account_lastname %>">

            <label for="account_email" class="email-label">Email Address:</label>
            <input type="email" id="account_email" name="account_email" class="account_email" required value="<%= locals.account_email %>">

            <label for="account_password" class="password-label">Password</label>
            <input type="password" id="account_password" name="account_password" class="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <small class="password-requirements">Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</small>
            <span id="pswBtn">Show Password</span>

            <button type='submit' id='loginButton' class='login-button'>Login</button>
        </fieldset>    
    </form>
</div>

<script src="/js/script.js"></script>
